        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@color/teal_700</item>
        <!-- PI breaks without this -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalculatorButtonLandscape" parent="Widget.Material3.Button">
        <item name="android:fontFamily">poppins</item>
        <item name="android:background">@drawable/circle</item>
        <!--        <item name="android:textColor">?attr/text_color</item>-->
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:includeFontPadding">false</item>
        <!-- cancel out material3 -->
        <item name="backgroundTint">@null</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>